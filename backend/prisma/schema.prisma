generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

enum Exchange {
  PANCAKE_V3
  UNISWAP_V3
}

enum QueryType {
  POLLING
  SUBSCRIPTION
}

model Token {
  address  String @id
  symbol   String
  name     String
  decimals Int

  tradingPairsBase  TradingPair[] @relation("BaseToken")
  tradingPairsQuote TradingPair[] @relation("QuoteToken")

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model TradingPair {
  id String @id @default(cuid())

  baseToken        Token  @relation("BaseToken", fields: [baseTokenAddress], references: [address])
  baseTokenAddress String

  quoteToken        Token  @relation("QuoteToken", fields: [quoteTokenAddress], references: [address])
  quoteTokenAddress String

  poolAddress String   @unique
  poolFee     Int
  exchange    Exchange

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model TraderMetric {
  id String @id @default(cuid())

  traderAddress     String
  baseTokenAddress  String
  quoteTokenAddress String
  traderType        QueryType

  blockNumber  Int
  txCount      Int
  baseBalance  Float
  quoteBalance Float

  createdAt DateTime @default(now())

  @@index([traderAddress, blockNumber])
}
